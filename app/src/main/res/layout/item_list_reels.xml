<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="460dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true">
            <androidx.cardview.widget.CardView
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:cardCornerRadius="100dp"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:id="@+id/rels_accaunt_image"
                    android:layout_gravity="center"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/accaunt" />
            </androidx.cardview.widget.CardView>
            <TextView
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:text="Abduxalil.Voxidjonov" />
            <TextView
                android:layout_marginTop="19dp"
                android:textSize="10sp"
                android:layout_marginStart="45dp"
                android:text="Kokand,Ferghana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_marginTop="5dp"
                android:layout_height="30dp"
                android:layout_marginStart="310dp"
                android:src="@drawable/nastroyka_image"
                />
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/rels_image_view"
            android:layout_width="match_parent"
            android:layout_height="307dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/img1"
            android:scaleType="centerCrop" />
        <ImageView
            android:layout_marginTop="355dp"
            android:layout_marginStart="15dp"
            android:layout_width="25dp"
            android:src="@drawable/like"
            android:layout_height="25dp"/>
        <ImageView
            android:layout_marginTop="355dp"
            android:layout_marginStart="50dp"
            android:layout_width="25dp"
            android:src="@drawable/instagram_comment"
            android:layout_height="25dp"/>
        <ImageView
            android:layout_marginTop="355dp"
            android:layout_marginStart="85dp"
            android:layout_width="25dp"
            android:src="@drawable/send"
            android:layout_height="25dp"/>
        <ImageView
            android:layout_marginTop="355dp"
            android:layout_marginStart="310dp"
            android:layout_width="30dp"
            android:src="@drawable/bookmark"
            android:layout_height="30dp"/>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="390dp"
            android:layout_width="20dp"
            android:layout_marginStart="15dp"
            android:layout_height="20dp"
            app:cardCornerRadius="100dp"
            android:layout_centerHorizontal="true">
            <ImageView
                android:id="@+id/rels_like_image"
                android:layout_gravity="center"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:scaleType="centerCrop"
                android:src="@drawable/accaunt" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_marginStart="45dp"
            android:textSize="12sp"
            android:text="Liked by Abduxalil.Voxidjonov and 1,000 others"
            android:layout_marginTop="390dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="12sp"
            android:layout_marginTop="415dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Joshua_I The game in japan was amazing and I want to\nshare some photos" />
    </androidx.cardview.widget.CardView>
</LinearLayout>